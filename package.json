{
    "name": "@toes/core",
    "private": false,
    "version": "0.0.3-dev",
    "description": "Loggers and more",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "prepublishOnly": "pnpm run lint && pnpm run build",
        "build": "tsc",
        "watch": "tsc --watch",
        "test": "npm-run-all clean-build build lint unit-test copy-past-detection",
        "clean-build": "git clean -fdx --exclude node_modules",
        "lint": "eslint --fix --quiet src/**/*",
        "security-audit": "pnpm run audit",
        "unit-test": "jest",
        "unit-test-update": "jest -u",
        "copy-past-detection": "jscpd"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/throw-out-error/core.git"
    },
    "keywords": [
        "typescript",
        "logger",
        "ts-log",
        "log4js",
        "node-bunyan"
    ],
    "author": "Theo Paris",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/throw-out-error/core/issues"
    },
    "homepage": "https://github.com/throw-out-error/core#README",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "moment": "^2.29.1",
        "ts-log": "^2.2.3"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.2",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3"
    }
}
